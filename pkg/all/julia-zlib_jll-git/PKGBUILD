pkgname=julia-zlib_jll-git
pkgver=1.2.11+9.0.1.gf71d146
pkgrel=1
pkgdesc="Zlib_jll.jl"
url="https://github.com/JuliaBinaryWrappers/Zlib_jll.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia zlib)
provides=('julia-zlib_jll')
source=(git://github.com/JuliaBinaryWrappers/Zlib_jll.jl)
md5sums=('SKIP')

pkgver() {
  cd Zlib_jll.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Zlib_jll.jl

  /usr/lib/julia/julia-gen-jll.sh Zlib_jll libz
}

package() {
  cd Zlib_jll.jl

  . /usr/lib/julia/julia-install-pkg.sh Zlib_jll "${pkgdir}" "${pkgname}"
}

pkgname=julia-dwarf-git
pkgver=0.0.3
pkgrel=1
pkgdesc="DWARF.jl"
url="https://github.com/Keno/DWARF.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-structio' 'julia-objfilebase' 'julia-abstracttrees')
provides=('julia-dwarf')
source=(git://github.com/Keno/DWARF.jl)
md5sums=('SKIP')

pkgver() {
  cd DWARF.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd DWARF.jl

  . julia-install-pkg.sh DWARF "${pkgdir}" "${pkgname}"
}

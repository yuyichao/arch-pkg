pkgname=eagle
pkgver=6.4.0
pkgrel=2
pkgdesc="A powerful suite for schematic capture and printed circuit board design (aka eaglecad)"
arch=('i686' 'x86_64')
url="http://www.cadsoft.de/"
license=('custom')
if [[ $CARCH = i686 ]]; then
  depends=(
    'fontconfig'
    'freetype2'
    'gcc-libs'
    'libx11'
    'libxcursor'
    'libxext'
    'libxi'
    'libxrandr'
    'libxrender'
    'openssl'
    'zlib'
  )
  optdepends=(
    'libjpeg-turbo'
    'libpng14'
  )
else
  depends=(
    'lib32-fontconfig'
    'lib32-freetype2'
    'lib32-gcc-libs'
    'lib32-libx11'
    'lib32-libxcursor'
    'lib32-libxext'
    'lib32-libxi'
    'lib32-libxrandr'
    'lib32-libxrender'
    'lib32-openssl'
    'lib32-zlib'
  )
  optdepends=(
    'lib32-libjpeg-turbo'
    'lib32-libpng14'
  )
fi
source=(ftp://ftp.cadsoft.de/$pkgname/program/${pkgver%.*}/$pkgname-lin-$pkgver.run
  $pkgname.desktop
  $pkgname.sh)
md5sums=('5e0b4f2864bdbc1677f2897c69ad20a0'
         '2f1a9361e7eb0c4eb3ff458ac9e2a906'
         'c6ab1922cd76bae647a20eadfc97ded2')

build() {
  cd "$srcdir"
  install -Dm755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$pkgname.desktop" \
    "$pkgdir/usr/share/applications/$pkgname.desktop"

  msg2 "Extracting package content (this may take a while)..."
  install -dm755 "$pkgdir/opt"
  sed -e '1,/^__DATA__$/d' "$pkgname-lin-$pkgver.run" | tar xjC "$pkgdir/opt"
  mv "$pkgdir/opt/$pkgname-$pkgver" "$pkgdir/opt/$pkgname"
  install -dm755 "$pkgdir"/usr/share/{man/man1,licenses/$pkgname,pixmaps}
  ln -sf /opt/$pkgname/doc/$pkgname.1 \
    "$pkgdir/usr/share/man/man1/$pkgname.1"
  ln -sf /opt/$pkgname/doc/license_en.txt \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

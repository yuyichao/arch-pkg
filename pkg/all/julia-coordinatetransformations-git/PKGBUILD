pkgname=julia-coordinatetransformations-git
pkgver=0.4.0
pkgrel=1
pkgdesc="CoordinateTransformations.jl"
url="https://github.com/FugroRoames/CoordinateTransformations.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-staticarrays julia-rotations)
provides=('julia-coordinatetransformations')
source=(git://github.com/FugroRoames/CoordinateTransformations.jl)
md5sums=('SKIP')

pkgver() {
  cd CoordinateTransformations.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd CoordinateTransformations.jl

  . julia-install-pkg.sh CoordinateTransformations "${pkgdir}" "${pkgname}"
}

pkgname=julia-calculus-git
pkgver=0.1.15
pkgrel=1
pkgdesc="Calculus.jl"
url="https://github.com/johnmyleswhite/Calculus.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-calculus')
source=(git://github.com/johnmyleswhite/Calculus.jl)
md5sums=('SKIP')

pkgver() {
  cd Calculus.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Calculus.jl

  . julia-install-pkg.sh Calculus "${pkgdir}" "${pkgname}"
}

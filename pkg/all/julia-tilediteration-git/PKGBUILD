pkgname=julia-tilediteration-git
pkgver=0.0.2
pkgrel=1
pkgdesc="TiledIteration.jl"
url="https://github.com/JuliaArrays/TiledIteration.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia)
provides=('julia-tilediteration')
source=(git://github.com/JuliaArrays/TiledIteration.jl)
md5sums=('SKIP')

pkgver() {
  cd TiledIteration.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd TiledIteration.jl

  . julia-install-pkg.sh TiledIteration "${pkgdir}" "${pkgname}"
}

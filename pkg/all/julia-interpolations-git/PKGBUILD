pkgname=julia-interpolations-git
pkgver=0.3.6.0.3.gac5475d
pkgrel=1
pkgdesc="Interpolations.jl"
url="https://github.com/tlycken/Interpolations.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
# TODO version depends
depends=(julia julia-woodburymatrices julia-ratios julia-axisalgorithms
         julia-compat)
provides=(julia-interpolations)
source=(git://github.com/tlycken/Interpolations.jl)
md5sums=('SKIP')

pkgver() {
  cd Interpolations.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Interpolations.jl

  . julia-install-pkg.sh Interpolations "${pkgdir}" "${pkgname}"
}

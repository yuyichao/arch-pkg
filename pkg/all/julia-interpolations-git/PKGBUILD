pkgname=julia-interpolations-git
pkgver=0.3.8.0.12.g380b80c
pkgrel=1
pkgdesc="Interpolations.jl"
url="https://github.com/JuliaMath/Interpolations.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-woodburymatrices julia-ratios julia-axisalgorithms julia-compat
         julia-dualnumbers)
provides=('julia-interpolations')
source=(git://github.com/JuliaMath/Interpolations.jl)
md5sums=('SKIP')

pkgver() {
  cd Interpolations.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Interpolations.jl

  . julia-install-pkg.sh Interpolations "${pkgdir}" "${pkgname}"
}

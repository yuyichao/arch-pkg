pkgname=julia-computationalresources-git
pkgver=0.0.2
pkgrel=1
pkgdesc="ComputationalResources.jl"
url="https://github.com/timholy/ComputationalResources.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-compat)
provides=('julia-computationalresources')
source=(git://github.com/timholy/ComputationalResources.jl)
md5sums=('SKIP')

pkgver() {
  cd ComputationalResources.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ComputationalResources.jl

  . julia-install-pkg.sh ComputationalResources "${pkgdir}" "${pkgname}"
}

pkgname=julia-latexstrings-git
pkgver=0.3.0.0.1.geab80a3
pkgrel=1
pkgdesc="LaTeXStrings.jl"
url="https://github.com/stevengj/LaTeXStrings.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-latexstrings')
source=(git://github.com/stevengj/LaTeXStrings.jl)
md5sums=('SKIP')

pkgver() {
  cd LaTeXStrings.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LaTeXStrings.jl

  . julia-install-pkg.sh LaTeXStrings "${pkgdir}" "${pkgname}"
}

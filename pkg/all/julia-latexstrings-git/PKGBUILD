pkgname=julia-latexstrings-git
pkgver=1.1.0
pkgrel=1
pkgdesc="LaTeXStrings.jl"
url="https://github.com/stevengj/LaTeXStrings.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia)
provides=(julia-latexstrings)
source=(git://github.com/stevengj/LaTeXStrings.jl)
md5sums=('SKIP')

pkgver() {
  cd LaTeXStrings.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LaTeXStrings.jl

  . /usr/lib/julia/julia-install-pkg.sh LaTeXStrings "${pkgdir}" "${pkgname}"
}

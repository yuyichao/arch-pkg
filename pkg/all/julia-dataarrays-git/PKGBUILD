pkgname=julia-dataarrays-git
pkgver=0.2.21
pkgrel=1
pkgdesc="DataArrays.jl"
url="https://github.com/JuliaStats/DataArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-statsbase' 'julia-compat' 'julia-reexport')
provides=('julia-dataarrays')
source=(git://github.com/JuliaStats/DataArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd DataArrays.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd DataArrays.jl

  . julia-install-pkg.sh DataArrays "${pkgdir}" "${pkgname}"
}

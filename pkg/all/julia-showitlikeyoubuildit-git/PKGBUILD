pkgname=julia-showitlikeyoubuildit-git
pkgver=0.0.1
pkgrel=1
pkgdesc="ShowItLikeYouBuildIt.jl"
url="https://github.com/JuliaArrays/ShowItLikeYouBuildIt.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia)
provides=('julia-showitlikeyoubuildit')
source=(git://github.com/JuliaArrays/ShowItLikeYouBuildIt.jl)
md5sums=('SKIP')

pkgver() {
  cd ShowItLikeYouBuildIt.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ShowItLikeYouBuildIt.jl

  . julia-install-pkg.sh ShowItLikeYouBuildIt "${pkgdir}" "${pkgname}"
}

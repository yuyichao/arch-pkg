pkgname=julia-lsqfit-git
pkgver=0.1.0.0.8.g308361c
pkgrel=1
pkgdesc="LsqFit.jl"
url="https://github.com/JuliaOpt/LsqFit.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-calculus' 'julia-distributions' 'julia-optim')
provides=('julia-lsqfit')
source=(git://github.com/JuliaOpt/LsqFit.jl)
md5sums=('SKIP')

pkgver() {
  cd LsqFit.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LsqFit.jl

  . julia-install-pkg.sh LsqFit "${pkgdir}" "${pkgname}"
}

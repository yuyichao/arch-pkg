pkgname=julia-lsqfit-git
pkgver=0.2.0.0.8.gd80f5ea
pkgrel=1
pkgdesc="LsqFit.jl"
url="https://github.com/JuliaOpt/LsqFit.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-calculus julia-distributions julia-optim julia-compat)
provides=(julia-lsqfit)
source=(git://github.com/JuliaOpt/LsqFit.jl)
md5sums=('SKIP')

pkgver() {
  cd LsqFit.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LsqFit.jl

  . julia-install-pkg.sh LsqFit "${pkgdir}" "${pkgname}"
}

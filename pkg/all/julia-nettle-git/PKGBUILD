pkgname=julia-nettle-git
pkgver=0.2.3.0.9.gf20cbb3
pkgrel=1
pkgdesc="Nettle.jl"
url="https://github.com/staticfloat/Nettle.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'nettle')
provides=('julia-nettle')
source=(git://github.com/staticfloat/Nettle.jl)
md5sums=('SKIP')

pkgver() {
  cd Nettle.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Nettle.jl

  julia --startup-file=no deps/build.jl
}

package() {
  cd Nettle.jl

  . julia-install-pkg.sh Nettle "${pkgdir}" "${pkgname}"
}

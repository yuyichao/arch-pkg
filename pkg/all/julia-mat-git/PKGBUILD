pkgname=julia-mat-git
pkgver=0.3.2.0.8.g573cc73
pkgrel=1
pkgdesc="MAT.jl"
url="https://github.com/simonster/MAT.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-hdf5 julia-bufferedstreams julia-libz julia-compat)
provides=(julia-mat)
source=(git://github.com/simonster/MAT.jl)
md5sums=('SKIP')

pkgver() {
  cd MAT.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MAT.jl

  . julia-install-pkg.sh MAT "${pkgdir}" "${pkgname}"
}

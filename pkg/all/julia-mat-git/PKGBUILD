pkgname=julia-mat-git
pkgver=0.2.14.0.10.g8b3af98
pkgrel=1
pkgdesc="MAT.jl"
url="https://github.com/simonster/MAT.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'julia-hdf5' 'julia-zlib' 'julia-compat')
provides=('julia-mat')
source=(git://github.com/simonster/MAT.jl)
md5sums=('SKIP')

pkgver() {
  cd MAT.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MAT.jl

  . julia-install-pkg.sh MAT "${pkgdir}" "${pkgname}"
}

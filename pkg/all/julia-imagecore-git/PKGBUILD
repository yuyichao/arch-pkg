pkgname=julia-imagecore-git
pkgver=0.1.4
pkgrel=1
pkgdesc="ImageCore.jl"
url="https://github.com/JuliaImages/ImageCore.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-fixedpointnumbers julia-colortypes julia-colors julia-mappedarrays
         julia-graphics julia-showitlikeyoubuildit julia-offsetarrays)
provides=('julia-imagecore')
source=(git://github.com/JuliaImages/ImageCore.jl)
md5sums=('SKIP')

pkgver() {
  cd ImageCore.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ImageCore.jl

  . julia-install-pkg.sh ImageCore "${pkgdir}" "${pkgname}"
}

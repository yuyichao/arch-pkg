pkgname=julia-sortingalgorithms-git
pkgver=0.0.6
pkgrel=1
pkgdesc="SortingAlgorithms.jl"
url="https://github.com/JuliaLang/SortingAlgorithms.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'julia-compat')
provides=('julia-sortingalgorithms')
source=(git://github.com/JuliaLang/SortingAlgorithms.jl)
md5sums=('SKIP')

pkgver() {
  cd SortingAlgorithms.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd SortingAlgorithms.jl

  . julia-install-pkg.sh SortingAlgorithms "${pkgdir}" "${pkgname}"
}

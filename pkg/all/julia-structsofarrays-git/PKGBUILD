pkgname=julia-structsofarrays-git
pkgver=0.0.1.0.5.gd83e4a7
pkgrel=1
pkgdesc="StructsOfArrays.jl"
url="https://github.com/simonster/StructsOfArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git')
# TODO version depends
depends=('julia')
provides=('julia-structsofarrays')
source=(git://github.com/simonster/StructsOfArrays.jl)
md5sums=('SKIP')
replaces=('julia-soarrays-git')

pkgver() {
  cd StructsOfArrays.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd StructsOfArrays.jl

  install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
  install LICENSE.md "${pkgdir}/usr/share/licenses/$pkgname/"

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/StructsOfArrays"

  cp -a src "${pkgdir}/${site_dir}/StructsOfArrays"
}

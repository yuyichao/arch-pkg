pkgname=julia-pyplot-git
pkgver=2.2.1.0.1.g06e800c
pkgrel=1
pkgdesc="PyPlot.jl"
url="https://github.com/stevengj/PyPlot.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-pycall' 'julia-colors' 'julia-latexstrings'
         'julia-compat' 'python-matplotlib' 'julia-conda')
provides=('julia-pyplot')
source=(git://github.com/stevengj/PyPlot.jl)
md5sums=('SKIP')

pkgver() {
  cd PyPlot.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd PyPlot.jl

  . julia-install-pkg.sh PyPlot "${pkgdir}" "${pkgname}"
}

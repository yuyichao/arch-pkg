pkgname=julia-pyplot-git
pkgver=2.9.0.0.1.gc451315
pkgrel=1
pkgdesc="PyPlot.jl"
url="https://github.com/stevengj/PyPlot.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-colors julia-latexstrings julia-pycall
         julia-versionparsing python-matplotlib)
provides=(julia-pyplot)
source=(git://github.com/stevengj/PyPlot.jl)
md5sums=('SKIP')

pkgver() {
  cd PyPlot.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd PyPlot.jl

  . /usr/lib/julia/julia-install-pkg.sh PyPlot "${pkgdir}" "${pkgname}"
}

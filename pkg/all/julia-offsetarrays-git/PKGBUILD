pkgname=julia-offsetarrays-git
pkgver=0.2.13.0.2.gc7ffd1b
pkgrel=1
pkgdesc="OffsetArrays.jl"
url="https://github.com/alsam/OffsetArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia)
provides=('julia-offsetarrays')
source=(git://github.com/alsam/OffsetArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd OffsetArrays.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd OffsetArrays.jl

  . julia-install-pkg.sh OffsetArrays "${pkgdir}" "${pkgname}"
}

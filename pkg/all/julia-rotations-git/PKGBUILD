pkgname=julia-rotations-git
pkgver=0.3.5.0.14.g1442562
pkgrel=1
pkgdesc="Rotations.jl"
url="https://github.com/FugroRoames/Rotations.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-staticarrays)
provides=('julia-rotations')
source=(git://github.com/FugroRoames/Rotations.jl)
md5sums=('SKIP')

pkgver() {
  cd Rotations.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Rotations.jl

  . julia-install-pkg.sh Rotations "${pkgdir}" "${pkgname}"
}

pkgname=julia-imagetransformations-git
pkgver=0.1.0.0.3.g24912f9
pkgrel=1
pkgdesc="ImageTransformations.jl"
url="https://github.com/JuliaImages/ImageTransformations.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-imagecore julia-coordinatetransformations julia-interpolations
         julia-offsetarrays julia-staticarrays julia-colors julia-colorvectorspace
         julia-fixedpointnumbers julia-compat)
provides=('julia-imagetransformations')
source=(git://github.com/JuliaImages/ImageTransformations.jl)
md5sums=('SKIP')

pkgver() {
  cd ImageTransformations.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ImageTransformations.jl

  . julia-install-pkg.sh ImageTransformations "${pkgdir}" "${pkgname}"
}

pkgname=julia-zlib-git
pkgver=0.1.12.0.5.gd89d460
pkgrel=1
pkgdesc="Zlib.jl"
url="https://github.com/dcjones/Zlib.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-zlib')
source=(git://github.com/dcjones/Zlib.jl)
md5sums=('SKIP')

pkgver() {
  cd Zlib.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Zlib.jl

  . julia-install-pkg.sh Zlib "${pkgdir}" "${pkgname}"
}

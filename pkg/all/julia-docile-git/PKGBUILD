pkgname=julia-docile-git
pkgver=0.5.23.0.6.gc32ed14
pkgrel=2
pkgdesc="Docile.jl"
url="https://github.com/MichaelHatherly/Docile.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-docile')
source=(git://github.com/MichaelHatherly/Docile.jl)
md5sums=('SKIP')

pkgver() {
  cd Docile.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Docile.jl

  . julia-install-pkg.sh Docile "${pkgdir}" "${pkgname}"
}

pkgname=julia-siunits-git
pkgver=0.0.6.0.4.gd9ebd1f
pkgrel=1
pkgdesc="SIUnits.jl"
url="https://github.com/Keno/SIUnits.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-texextensions' 'julia-compat')
provides=('julia-siunits')
source=(git://github.com/Keno/SIUnits.jl)
md5sums=('SKIP')

pkgver() {
  cd SIUnits.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd SIUnits.jl

  . julia-install-pkg.sh SIUnits "${pkgdir}" "${pkgname}"
}

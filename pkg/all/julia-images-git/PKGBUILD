pkgname=julia-images-git
pkgver=0.5.4.0.8.g8840a95
pkgrel=1
pkgdesc="Images.jl"
url="https://github.com/timholy/Images.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-colors' 'julia-colorvectorspace'
         'julia-fixedpointnumbers' 'julia-siunits' 'julia-zlib'
         'julia-graphics' 'julia-fileio' 'julia-compat')
provides=('julia-images')
source=(git://github.com/timholy/Images.jl)
md5sums=('SKIP')

pkgver() {
  cd Images.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Images.jl

  . julia-install-pkg.sh Images "${pkgdir}" "${pkgname}"
}

pkgname=julia-images-git
pkgver=0.6.1.0.7.gf408a21
pkgrel=1
pkgdesc="Images.jl"
url="https://github.com/JuliaImages/Images.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-reexport julia-colors julia-colorvectorspace
         julia-fixedpointnumbers julia-imagecore julia-imagefiltering
         julia-axisarrays julia-imageaxes julia-imagemetadata julia-indirectarrays
         julia-mappedarrays julia-siunits julia-graphics julia-fileio julia-compat
         julia-statsbase)
provides=('julia-images')
source=(git://github.com/JuliaImages/Images.jl)
md5sums=('SKIP')

pkgver() {
  cd Images.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Images.jl

  . julia-install-pkg.sh Images "${pkgdir}" "${pkgname}"
}

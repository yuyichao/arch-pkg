pkgname=julia-compat-git
pkgver=3.8.0
pkgrel=1
pkgdesc="Compat.jl"
url="https://github.com/JuliaLang/Compat.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=('julia')
provides=('julia-compat')
source=(git://github.com/JuliaLang/Compat.jl)
md5sums=('SKIP')

pkgver() {
  cd Compat.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Compat.jl

  . /usr/lib/julia/julia-install-pkg.sh Compat "${pkgdir}" "${pkgname}"
}

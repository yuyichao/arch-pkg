pkgname=julia-graphics-git
pkgver=0.2.0
pkgrel=1
pkgdesc="Graphics.jl"
url="https://github.com/JuliaLang/Graphics.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-colors julia-compat julia-nanmath)
provides=('julia-graphics')
source=(git://github.com/JuliaLang/Graphics.jl)
md5sums=('SKIP')

pkgver() {
  cd Graphics.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Graphics.jl

  . julia-install-pkg.sh Graphics "${pkgdir}" "${pkgname}"
}

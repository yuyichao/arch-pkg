pkgname=julia-distributions-git
pkgver=0.12.5
pkgrel=1
pkgdesc="Distributions.jl"
url="https://github.com/JuliaStats/Distributions.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-pdmats julia-statsfuns julia-calculus
         julia-statsbase julia-compat julia-quadgk julia-specialfunctions)
provides=(julia-distributions)
source=(git://github.com/JuliaStats/Distributions.jl)
md5sums=('SKIP')

pkgver() {
  cd Distributions.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Distributions.jl

  . julia-install-pkg.sh Distributions "${pkgdir}" "${pkgname}"
}

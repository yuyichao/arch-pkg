pkgname=julia-diffbase-git
pkgver=0.0.4
pkgrel=1
pkgdesc="DiffBase.jl"
url="https://github.com/JuliaDiff/DiffBase.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-calculus' 'julia-nanmath')
provides=('julia-diffbase')
source=(git://github.com/JuliaDiff/DiffBase.jl)
md5sums=('SKIP')

pkgver() {
  cd DiffBase.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd DiffBase.jl

  . julia-install-pkg.sh DiffBase "${pkgdir}" "${pkgname}"
}

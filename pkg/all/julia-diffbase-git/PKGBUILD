pkgname=julia-diffbase-git
pkgver=0.3.2
pkgrel=1
pkgdesc="DiffBase.jl"
url="https://github.com/JuliaDiff/DiffBase.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-staticarrays)
provides=('julia-diffbase')
source=(git://github.com/JuliaDiff/DiffBase.jl)
md5sums=('SKIP')

pkgver() {
  cd DiffBase.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd DiffBase.jl

  . julia-install-pkg.sh DiffBase "${pkgdir}" "${pkgname}"
}

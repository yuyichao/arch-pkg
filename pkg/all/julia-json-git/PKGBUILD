pkgname=julia-json-git
pkgver=0.5.0.0.10.gabff389
pkgrel=1
pkgdesc="JSON.jl"
url="https://github.com/JuliaLang/JSON.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-json')
source=(git://github.com/JuliaLang/JSON.jl)
md5sums=('SKIP')

pkgver() {
  cd JSON.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd JSON.jl

  . julia-install-pkg.sh JSON "${pkgdir}" "${pkgname}"
}

pkgname=julia-jld-git
pkgver=0.6.3
pkgrel=1
pkgdesc="JLD.jl"
url="https://github.com/JuliaLang/JLD.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'julia-compat' 'julia-hdf5' julia-fileio julia-legacystrings)
provides=('julia-jld')
source=(git://github.com/JuliaLang/JLD.jl)
md5sums=('SKIP')

pkgver() {
  cd JLD.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd JLD.jl

  . julia-install-pkg.sh JLD "${pkgdir}" "${pkgname}"
}

pkgname=julia-axisarrays-git
pkgver=0.1.2.0.5.g4e30a82
pkgrel=1
pkgdesc="AxisArrays.jl"
url="https://github.com/JuliaArrays/AxisArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-intervalsets julia-iterators julia-rangearrays julia-compat)
provides=('julia-axisarrays')
source=(git://github.com/JuliaArrays/AxisArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd AxisArrays.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd AxisArrays.jl

  . julia-install-pkg.sh AxisArrays "${pkgdir}" "${pkgname}"
}

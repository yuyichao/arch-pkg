pkgname=julia-factcheck-git
pkgver=0.4.2.0.1.g2790323
pkgrel=1
pkgdesc="FactCheck.jl"
url="https://github.com/JuliaLang/FactCheck.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-factcheck')
source=(git://github.com/JuliaLang/FactCheck.jl)
md5sums=('SKIP')

pkgver() {
  cd FactCheck.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd FactCheck.jl

  . julia-install-pkg.sh FactCheck "${pkgdir}" "${pkgname}"
}

pkgname=julia-class-git
pkgver=56.4096ad5
pkgrel=1
pkgdesc="Class.jl"
url="https://github.com/yuyichao/Class.jl"
arch=('any')
license=('LGPLv3')
depends=('julia>=2:0.4.0' 'julia<2:0.5.0' 'julia-datastructures')
makedepends=('cmake')
provides=('julia-class')
options=('debug' 'strip')
source=(git://github.com/yuyichao/Class.jl)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/Class.jl"

  echo "$(git rev-list --count master).$(git rev-parse --short master)"
}

build() {
  cd "$srcdir/Class.jl"
  mkdir -p build
  cd build

  cmake ..

  make
}

package() {
  cd "$srcdir/Class.jl"
  cd build

  make install DESTDIR="${pkgdir}"
}

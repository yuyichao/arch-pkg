pkgname=julia-linesearches-git
pkgver=2.2.1
pkgrel=1
pkgdesc="LineSearches.jl"
url="https://github.com/anriseth/LineSearches.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-nlsolversbase julia-parameters)
provides=(julia-linesearches)
source=(git://github.com/anriseth/LineSearches.jl)
md5sums=('SKIP')

pkgver() {
  cd LineSearches.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LineSearches.jl

  . julia-install-pkg.sh LineSearches "${pkgdir}" "${pkgname}"
}

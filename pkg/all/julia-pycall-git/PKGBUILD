pkgname=julia-pycall-git
pkgver=1.12.0.0.11.g216e085
pkgrel=1
pkgdesc="PyCall.jl"
url="https://github.com/stevengj/PyCall.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-conda' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-macrotools' 'python')
provides=('julia-pycall')
source=(git://github.com/stevengj/PyCall.jl)
md5sums=('SKIP')

pkgver() {
  cd PyCall.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd PyCall.jl/deps

  julia --startup-file=no build.jl
}

package() {
  cd PyCall.jl

  . julia-install-pkg.sh PyCall "${pkgdir}" "${pkgname}"
}

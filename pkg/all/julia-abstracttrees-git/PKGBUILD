pkgname=julia-abstracttrees-git
pkgver=0.0.4
pkgrel=1
pkgdesc="AbstractTrees.jl"
url="https://github.com/Keno/AbstractTrees.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia')
provides=('julia-abstracttrees')
source=(git://github.com/Keno/AbstractTrees.jl)
md5sums=('SKIP')

pkgver() {
  cd AbstractTrees.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd AbstractTrees.jl

  . julia-install-pkg.sh AbstractTrees "${pkgdir}" "${pkgname}"
}

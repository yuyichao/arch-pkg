pkgname=julia-pdmats-git
pkgver=0.5.6
pkgrel=1
pkgdesc="PDMats.jl"
url="https://github.com/JuliaStats/PDMats.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-pdmats')
source=(git://github.com/JuliaStats/PDMats.jl)
md5sums=('SKIP')

pkgver() {
  cd PDMats.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd PDMats.jl

  . julia-install-pkg.sh PDMats "${pkgdir}" "${pkgname}"
}

pkgname=julia-kerneldensity-git
pkgver=0.1.2.0.5.g2de1e7b
pkgrel=1
pkgdesc="KernelDensity.jl"
url="https://github.com/JuliaStats/KernelDensity.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-statsbase' 'julia-distributions' 'julia-optim'
         'julia-grid' 'julia-compat')
provides=('julia-kerneldensity')
source=(git://github.com/JuliaStats/KernelDensity.jl)
md5sums=('SKIP')

pkgver() {
  cd KernelDensity.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd KernelDensity.jl

  . julia-install-pkg.sh KernelDensity "${pkgdir}" "${pkgname}"
}

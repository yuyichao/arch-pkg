pkgname=julia-optim-git
pkgver=0.7.8.0.35.g82639f6
pkgrel=1
pkgdesc="Optim.jl"
url="https://github.com/JuliaOpt/Optim.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
# TODO version depends
depends=(julia julia-positivefactorizations julia-compat julia-linesearches julia-calculus
         julia-nlsolversbase julia-forwarddiff julia-reversediff)
provides=('julia-optim')
source=(git://github.com/JuliaOpt/Optim.jl)
md5sums=('SKIP')

pkgver() {
  cd Optim.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Optim.jl

  . julia-install-pkg.sh Optim "${pkgdir}" "${pkgname}"
}

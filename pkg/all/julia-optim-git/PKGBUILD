pkgname=julia-optim-git
pkgver=0.7.1.0.31.gc667a35
pkgrel=1
pkgdesc="Optim.jl"
url="https://github.com/JuliaOpt/Optim.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-calculus' 'julia-forwarddiff'
         'julia-positivefactorizations' 'julia-compat'
         'julia-linesearches')
provides=('julia-optim')
source=(git://github.com/JuliaOpt/Optim.jl)
md5sums=('SKIP')

pkgver() {
  cd Optim.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Optim.jl

  . julia-install-pkg.sh Optim "${pkgdir}" "${pkgname}"
}

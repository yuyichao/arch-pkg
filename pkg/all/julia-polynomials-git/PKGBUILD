pkgname=julia-polynomials-git
pkgver=0.1.0
pkgrel=1
pkgdesc="Polynomials.jl"
url="https://github.com/Keno/Polynomials.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-polynomials')
source=(git://github.com/Keno/Polynomials.jl)
md5sums=('SKIP')

pkgver() {
  cd Polynomials.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Polynomials.jl

  . julia-install-pkg.sh Polynomials "${pkgdir}" "${pkgname}"
}

pkgname=julia-nanmath-git
pkgver=0.2.1
pkgrel=2
pkgdesc="NaNMath.jl"
url="https://github.com/mlubin/NaNMath.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-nanmath')
source=(git://github.com/mlubin/NaNMath.jl)
md5sums=('SKIP')

pkgver() {
  cd NaNMath.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd NaNMath.jl

  . julia-install-pkg.sh NaNMath "${pkgdir}" "${pkgname}"
}

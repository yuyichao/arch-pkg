pkgname=julia-pkgdev-git
pkgver=0.1.0.0.24.g3dc3c13
pkgrel=1
pkgdesc="PkgDev.jl"
url="https://github.com/JuliaLang/PkgDev.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git')
depends=('julia' 'julia-json' 'julia-uriparser' 'julia-compat')
provides=('julia-pkgdev')
source=(git://github.com/JuliaLang/PkgDev.jl)
md5sums=('SKIP')

pkgver() {
  cd PkgDev.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd PkgDev.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/PkgDev"

  cp -a src res "${pkgdir}/${site_dir}/PkgDev"
}

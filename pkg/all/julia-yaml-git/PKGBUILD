pkgname=julia-yaml-git
pkgver=0.1.10.0.2.gb2ced66
pkgrel=2
pkgdesc="YAML.jl"
url="https://github.com/dcjones/YAML.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-codecs' 'julia-compat')
provides=('julia-yaml')
source=(git://github.com/dcjones/YAML.jl)
md5sums=('SKIP')

pkgver() {
  cd YAML.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd YAML.jl

  . julia-install-pkg.sh YAML "${pkgdir}" "${pkgname}"
}

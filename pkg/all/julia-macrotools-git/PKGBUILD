pkgname=julia-macrotools-git
pkgver=0.5.4.0.6.g0cf0f7c
pkgrel=1
pkgdesc="MacroTools.jl"
url="https://github.com/MikeInnes/MacroTools.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia)
provides=('julia-macrotools')
source=(git://github.com/MikeInnes/MacroTools.jl)
md5sums=('SKIP')

pkgver() {
  cd MacroTools.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MacroTools.jl

  . /usr/lib/julia/julia-install-pkg.sh MacroTools "${pkgdir}" "${pkgname}"
}

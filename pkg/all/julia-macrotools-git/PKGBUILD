pkgname=julia-macrotools-git
pkgver=0.3.0.0.24.g5e5eca8
pkgrel=1
pkgdesc="MacroTools.jl"
url="https://github.com/one-more-minute/MacroTools.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-macrotools')
source=(git://github.com/one-more-minute/MacroTools.jl)
md5sums=('SKIP')

pkgver() {
  cd MacroTools.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MacroTools.jl

  . julia-install-pkg.sh MacroTools "${pkgdir}" "${pkgname}"
}

pkgname=julia-macrotools-git
pkgver=0.3.0.0.7.g180de9b
pkgrel=1
pkgdesc="MacroTools.jl"
url="https://github.com/one-more-minute/MacroTools.jl"
arch=('any')
license=('MIT')
makedepends=('git')
# TODO version depends
depends=('julia')
provides=('julia-macrotools' 'julia-compat')
source=(git://github.com/one-more-minute/MacroTools.jl)
md5sums=('SKIP')

pkgver() {
  cd MacroTools.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MacroTools.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")
  dest_dir="${pkgdir}/${site_dir}/MacroTools"

  install -dm755 "${dest_dir}"
  # This should ignore the .* files automatically
  for f in *; do
    case "$f" in
      LICENSE*)
        install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
        install "$f" "${pkgdir}/usr/share/licenses/$pkgname/"
        ;;
      appveyor.yml)
        true
        ;;
      *)
        cp -a "$f" "${pkgdir}/${site_dir}/MacroTools"
        ;;
    esac
  done
}

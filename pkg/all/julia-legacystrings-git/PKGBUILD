pkgname=julia-legacystrings-git
pkgver=0.1.1.0.2.gd96e96a
pkgrel=1
pkgdesc="LegacyStrings.jl"
url="https://github.com/JuliaArchive/LegacyStrings.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'julia-compat')
provides=('julia-legacystrings')
source=(git://github.com/JuliaArchive/LegacyStrings.jl)
md5sums=('SKIP')

pkgver() {
  cd LegacyStrings.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LegacyStrings.jl

  . julia-install-pkg.sh LegacyStrings "${pkgdir}" "${pkgname}"
}

pkgname=julia-colortypes-git
pkgver=0.10.2
pkgrel=1
pkgdesc="ColorTypes.jl"
url="https://github.com/JuliaGraphics/ColorTypes.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-fixedpointnumbers)
provides=(julia-colortypes)
source=(git://github.com/JuliaGraphics/ColorTypes.jl)
md5sums=('SKIP')

pkgver() {
  cd ColorTypes.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ColorTypes.jl

  . /usr/lib/julia/julia-install-pkg.sh ColorTypes "${pkgdir}" "${pkgname}"
}

pkgname=julia-hexagons-git
pkgver=0.0.4
pkgrel=1
pkgdesc="Hexagons.jl"
url="https://github.com/dcjones/Hexagons.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-hexagons')
source=(git://github.com/dcjones/Hexagons.jl)
md5sums=('SKIP')

pkgver() {
  cd Hexagons.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Hexagons.jl

  . julia-install-pkg.sh Hexagons "${pkgdir}" "${pkgname}"
}

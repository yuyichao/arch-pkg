pkgname=julia-reactive-git
pkgver=0.3.0
pkgrel=1
pkgdesc="Reactive.jl"
url="https://github.com/JuliaLang/Reactive.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git')
depends=('julia')
provides=('julia-reactive')
source=(git://github.com/JuliaLang/Reactive.jl)
md5sums=('SKIP')

pkgver() {
  cd Reactive.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Reactive.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/Reactive"

  cp -a src "${pkgdir}/${site_dir}/Reactive"
}

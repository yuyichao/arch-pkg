pkgname=julia-immutablearrays-git
pkgver=0.0.11
pkgrel=1
pkgdesc="ImmutableArrays.jl"
url="https://github.com/JuliaGeometry/ImmutableArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-immutablearrays')
source=(git://github.com/JuliaGeometry/ImmutableArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd ImmutableArrays.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ImmutableArrays.jl

  . julia-install-pkg.sh ImmutableArrays "${pkgdir}" "${pkgname}"
}

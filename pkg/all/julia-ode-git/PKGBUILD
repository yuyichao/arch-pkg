pkgname=julia-ode-git
pkgver=0.2.1.0.24.g4e77830
pkgrel=1
pkgdesc="ODE.jl"
url="https://github.com/JuliaDiffEq/ODE.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-polynomials')
provides=('julia-ode')
source=(git://github.com/JuliaDiffEq/ODE.jl)
md5sums=('SKIP')

pkgver() {
  cd ODE.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ODE.jl

  . julia-install-pkg.sh ODE "${pkgdir}" "${pkgname}"
}

pkgname=julia-gsl-git
pkgver=0.3.1.0.11.g8456534
pkgrel=1
pkgdesc="GSL.jl"
url="https://github.com/jiahao/GSL.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'gsl')
provides=('julia-gsl')
source=(git://github.com/jiahao/GSL.jl)
md5sums=('SKIP')

pkgver() {
  cd GSL.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd GSL.jl/deps

  julia --startup-file=no ./build.jl
}

package() {
  cd GSL.jl

  . julia-install-pkg.sh GSL "${pkgdir}" "${pkgname}"
}

pkgname=julia-forwarddiff-git
pkgver=0.3.4.0.1.g791cd93
pkgrel=1
pkgdesc="ForwardDiff.jl"
url="https://github.com/JuliaDiff/ForwardDiff.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-diffbase julia-compat julia-calculus julia-nanmath)
provides=(julia-forwarddiff)
source=(git://github.com/JuliaDiff/ForwardDiff.jl)
md5sums=('SKIP')

pkgver() {
  cd ForwardDiff.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ForwardDiff.jl

  . julia-install-pkg.sh ForwardDiff "${pkgdir}" "${pkgname}"
}

pkgname=julia-forwarddiff-git
pkgver=0.6.0
pkgrel=1
pkgdesc="ForwardDiff.jl"
url="https://github.com/JuliaDiff/ForwardDiff.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-staticarrays julia-diffbase julia-nanmath julia-specialfunctions
         julia-realinterface julia-commonsubexpressions)
provides=(julia-forwarddiff)
source=('git://github.com/JuliaDiff/ForwardDiff.jl')
md5sums=('SKIP')

pkgver() {
  cd ForwardDiff.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ForwardDiff.jl

  . julia-install-pkg.sh ForwardDiff "${pkgdir}" "${pkgname}"
}

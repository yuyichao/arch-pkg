pkgname=julia-gzip-git
pkgver=0.2.20
pkgrel=1
pkgdesc="GZip.jl"
url="https://github.com/JuliaLang/GZip.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'gzip')
provides=('julia-gzip')
options=('debug' 'strip')
source=(git://github.com/JuliaLang/GZip.jl)
md5sums=('SKIP')

pkgver() {
  cd GZip.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd GZip.jl

  . julia-install-pkg.sh GZip "${pkgdir}" "${pkgname}"
}

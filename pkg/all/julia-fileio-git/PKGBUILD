pkgname=julia-fileio-git
pkgver=0.0.5.0.3.g15a0a20
pkgrel=1
pkgdesc="FileIO.jl"
url="https://github.com/JuliaIO/FileIO.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-fileio')
source=(git://github.com/JuliaIO/FileIO.jl)
md5sums=('SKIP')

pkgver() {
  cd FileIO.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd FileIO.jl

  . julia-install-pkg.sh FileIO "${pkgdir}" "${pkgname}"
}

pkgname=julia-showoff-git
pkgver=0.0.6
pkgrel=2
pkgdesc="Showoff.jl"
url="https://github.com/dcjones/Showoff.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-iterators')
provides=('julia-showoff')
source=(git://github.com/dcjones/Showoff.jl)
md5sums=('SKIP')

pkgver() {
  cd Showoff.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Showoff.jl

  . julia-install-pkg.sh Showoff "${pkgdir}" "${pkgname}"
}

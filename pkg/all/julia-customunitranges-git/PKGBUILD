pkgname=julia-customunitranges-git
pkgver=0.0.4
pkgrel=1
pkgdesc="CustomUnitRanges.jl"
url="https://github.com/JuliaArrays/CustomUnitRanges.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia)
provides=('julia-customunitranges')
source=(git://github.com/JuliaArrays/CustomUnitRanges.jl)
md5sums=('SKIP')

pkgver() {
  cd CustomUnitRanges.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd CustomUnitRanges.jl

  . julia-install-pkg.sh CustomUnitRanges "${pkgdir}" "${pkgname}"
}

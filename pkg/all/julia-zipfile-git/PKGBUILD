pkgname=julia-zipfile-git
pkgver=0.4.0
pkgrel=1
pkgdesc="ZipFile.jl"
url="https://github.com/fhs/ZipFile.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-compat)
provides=('julia-zipfile')
source=(git://github.com/fhs/ZipFile.jl)
md5sums=('SKIP')

pkgver() {
  cd ZipFile.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ZipFile.jl

  . julia-install-pkg.sh ZipFile "${pkgdir}" "${pkgname}"
}

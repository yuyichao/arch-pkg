pkgname=julia-texextensions-git
pkgver=0.0.3
pkgrel=1
pkgdesc="TexExtensions.jl"
url="https://github.com/Keno/TexExtensions.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-texextensions')
source=(git://github.com/Keno/TexExtensions.jl)
md5sums=('SKIP')

pkgver() {
  cd TexExtensions.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd TexExtensions.jl

  . julia-install-pkg.sh TexExtensions "${pkgdir}" "${pkgname}"
}

pkgname=julia-sha-git
pkgver=0.3.2.0.12.gd44d9d8
pkgrel=1
pkgdesc="SHA.jl"
url="https://github.com/staticfloat/SHA.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-sha')
source=(git://github.com/staticfloat/SHA.jl)
md5sums=('SKIP')

pkgver() {
  cd SHA.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd SHA.jl

  . julia-install-pkg.sh SHA "${pkgdir}" "${pkgname}"
}

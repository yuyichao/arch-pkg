pkgname=julia-andorsif-git
pkgver=0.0.3
pkgrel=2
pkgdesc="AndorSIF.jl"
url="https://github.com/JuliaIO/AndorSIF.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-images' 'julia-fileio' 'julia-compat')
provides=('julia-andorsif')
source=(git://github.com/JuliaIO/AndorSIF.jl)
md5sums=('SKIP')

pkgver() {
  cd AndorSIF.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd AndorSIF.jl

  . julia-install-pkg.sh AndorSIF "${pkgdir}" "${pkgname}"
}

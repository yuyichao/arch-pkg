pkgname=julia-fftviews-git
pkgver=0.0.2
pkgrel=1
pkgdesc="FFTViews.jl"
url="https://github.com/JuliaArrays/FFTViews.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-customunitranges julia-compat)
provides=('julia-fftviews')
source=(git://github.com/JuliaArrays/FFTViews.jl)
md5sums=('SKIP')

pkgver() {
  cd FFTViews.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd FFTViews.jl

  . julia-install-pkg.sh FFTViews "${pkgdir}" "${pkgname}"
}

pkgname=julia-positivefactorizations-git
pkgver=0.0.1
pkgrel=1
pkgdesc="PositiveFactorizations.jl"
url="https://github.com/timholy/PositiveFactorizations.jl"
arch=('any')
license=('MIT')
makedepends=('git')
# TODO version depends
depends=('julia')
provides=('julia-positivefactorizations')
source=(git://github.com/timholy/PositiveFactorizations.jl)
md5sums=('SKIP')

pkgver() {
  cd PositiveFactorizations.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd PositiveFactorizations.jl

  install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
  install LICENSE.md "${pkgdir}/usr/share/licenses/$pkgname/"

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/PositiveFactorizations"

  cp -a src "${pkgdir}/${site_dir}/PositiveFactorizations"
}

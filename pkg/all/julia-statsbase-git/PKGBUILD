pkgname=julia-statsbase-git
pkgver=0.13.1.0.2.g1b815de
pkgrel=1
pkgdesc="StatsBase.jl"
url="https://github.com/JuliaStats/StatsBase.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-compat julia-datastructures)
provides=(julia-statsbase)
source=(git://github.com/JuliaStats/StatsBase.jl)
md5sums=('SKIP')

pkgver() {
  cd StatsBase.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd StatsBase.jl

  . julia-install-pkg.sh StatsBase "${pkgdir}" "${pkgname}"
}

pkgname=julia-rangearrays-git
pkgver=0.1.2.0.7.g3a312a4
pkgrel=1
pkgdesc="RangeArrays.jl"
url="https://github.com/JuliaArrays/RangeArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-compat)
provides=('julia-rangearrays')
source=(git://github.com/JuliaArrays/RangeArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd RangeArrays.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd RangeArrays.jl

  . julia-install-pkg.sh RangeArrays "${pkgdir}" "${pkgname}"
}

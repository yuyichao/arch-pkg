pkgname=julia-httpcommon-git
pkgver=0.2.4.0.1.g17489e3
pkgrel=1
pkgdesc="HttpCommon.jl"
url="https://github.com/JuliaWeb/HttpCommon.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-uriparser')
provides=('julia-httpcommon')
source=(git://github.com/JuliaWeb/HttpCommon.jl)
md5sums=('SKIP')

pkgver() {
  cd HttpCommon.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd HttpCommon.jl

  . julia-install-pkg.sh HttpCommon "${pkgdir}" "${pkgname}"
}

pkgname=julia-opencl-git
pkgver=0.6.0.0.1.g607ec78
pkgrel=1
pkgdesc="OpenCL.jl"
url="https://github.com/JuliaGPU/OpenCL.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-compat opencl-icd-loader)
provides=('julia-opencl')
source=(git://github.com/JuliaGPU/OpenCL.jl)
md5sums=('SKIP')

pkgver() {
  cd OpenCL.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd OpenCL.jl

  . julia-install-pkg.sh OpenCL "${pkgdir}" "${pkgname}"
}

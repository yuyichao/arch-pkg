pkgname=julia-opencl-git
pkgver=0.3.6.0.8.ge05be14
pkgrel=1
pkgdesc="OpenCL.jl"
url="https://github.com/JuliaGPU/OpenCL.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git')
depends=('julia' 'libcl')
provides=('julia-opencl')
source=(git://github.com/JuliaGPU/OpenCL.jl)
md5sums=('SKIP')

pkgver() {
  cd OpenCL.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd OpenCL.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/OpenCL"

  cp -a src "${pkgdir}/${site_dir}/OpenCL"
}

pkgname=julia-opencl-git
pkgver=0.5.0
pkgrel=1
pkgdesc="OpenCL.jl"
url="https://github.com/JuliaGPU/OpenCL.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'libcl')
provides=('julia-opencl')
source=(git://github.com/JuliaGPU/OpenCL.jl)
md5sums=('SKIP')

pkgver() {
  cd OpenCL.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd OpenCL.jl

  . julia-install-pkg.sh OpenCL "${pkgdir}" "${pkgname}"
}

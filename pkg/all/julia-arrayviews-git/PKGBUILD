pkgname=julia-arrayviews-git
pkgver=0.6.2
pkgrel=1
pkgdesc="ArrayViews.jl"
url="https://github.com/JuliaLang/ArrayViews.jl"
arch=('any')
license=('MIT')
makedepends=('git')
# TODO version depends
depends=('julia')
provides=('julia-arrayviews')
source=(git://github.com/JuliaLang/ArrayViews.jl)
md5sums=('SKIP')

pkgver() {
  cd ArrayViews.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ArrayViews.jl

  install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
  install LICENSE "${pkgdir}/usr/share/licenses/$pkgname/"

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/ArrayViews"

  cp -a src "${pkgdir}/${site_dir}/ArrayViews"
}

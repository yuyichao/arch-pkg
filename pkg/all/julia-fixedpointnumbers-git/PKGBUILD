pkgname=julia-fixedpointnumbers-git
pkgver=0.2.1
pkgrel=1
pkgdesc="FixedPointNumbers.jl"
url="https://github.com/JeffBezanson/FixedPointNumbers.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-fixedpointnumbers')
source=(git://github.com/JeffBezanson/FixedPointNumbers.jl)
md5sums=('SKIP')

pkgver() {
  cd FixedPointNumbers.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd FixedPointNumbers.jl

  . julia-install-pkg.sh FixedPointNumbers "${pkgdir}" "${pkgname}"
}

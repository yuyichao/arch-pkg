pkgname=julia-color-git
pkgver=0.4.4.0.2.g6a0077d
pkgrel=1
pkgdesc="Color.jl"
url="https://github.com/JuliaLang/Color.jl"
arch=('any')
license=('LGPLv3')
makedepends=('git')
# TODO version depends
depends=('julia' 'julia-graphics')
provides=('julia-color')
source=(git://github.com/JuliaLang/Color.jl)
md5sums=('SKIP')

pkgver() {
  cd Color.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Color.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/Color"

  cp -a src "${pkgdir}/${site_dir}/Color"
}

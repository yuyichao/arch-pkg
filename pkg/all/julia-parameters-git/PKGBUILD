pkgname=julia-parameters-git
pkgver=0.7.3
pkgrel=1
pkgdesc="Parameters.jl"
url="https://github.com/mauro3/Parameters.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-datastructures)
provides=(julia-parameters)
source=(git://github.com/mauro3/Parameters.jl)
md5sums=('SKIP')

pkgver() {
  cd Parameters.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Parameters.jl

  . julia-install-pkg.sh Parameters "${pkgdir}" "${pkgname}"
}

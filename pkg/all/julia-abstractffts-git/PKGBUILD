pkgname=julia-abstractffts-git
pkgver=0.1.0
pkgrel=1
pkgdesc="AbstractFFTs.jl"
url="https://github.com/JuliaMath/AbstractFFTs.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia')
provides=('julia-abstractffts')
source=(git://github.com/JuliaMath/AbstractFFTs.jl)
md5sums=('SKIP')

pkgver() {
  cd AbstractFFTs.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd AbstractFFTs.jl

  . julia-install-pkg.sh AbstractFFTs "${pkgdir}" "${pkgname}"
}

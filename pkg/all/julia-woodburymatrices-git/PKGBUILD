pkgname=julia-woodburymatrices-git
pkgver=0.2.2
pkgrel=2
pkgdesc="WoodburyMatrices.jl"
url="https://github.com/timholy/WoodburyMatrices.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-woodburymatrices')
source=(git://github.com/timholy/WoodburyMatrices.jl)
md5sums=('SKIP')

pkgver() {
  cd WoodburyMatrices.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd WoodburyMatrices.jl

  . julia-install-pkg.sh WoodburyMatrices "${pkgdir}" "${pkgname}"
}

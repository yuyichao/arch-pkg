pkgname=julia-axisalgorithms-git
pkgver=0.1.6
pkgrel=2
pkgdesc="AxisAlgorithms.jl"
url="https://github.com/timholy/AxisAlgorithms.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-woodburymatrices julia-compat)
provides=(julia-axisalgorithms)
source=(git://github.com/timholy/AxisAlgorithms.jl)
md5sums=('SKIP')

pkgver() {
  cd AxisAlgorithms.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd AxisAlgorithms.jl

  . julia-install-pkg.sh AxisAlgorithms "${pkgdir}" "${pkgname}"
}

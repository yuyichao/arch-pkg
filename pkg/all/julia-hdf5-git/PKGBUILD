pkgname=julia-hdf5-git
pkgver=0.6.4.0.2.g668dd90
pkgrel=1
pkgdesc="HDF5.jl"
url="https://github.com/JuliaLang/HDF5.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-blosc' 'julia-compat' 'hdf5')
provides=('julia-hdf5')
source=(git://github.com/JuliaLang/HDF5.jl)
md5sums=('SKIP')

pkgver() {
  cd HDF5.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd HDF5.jl

  julia --startup-file=no deps/build.jl
}

package() {
  cd HDF5.jl

  . julia-install-pkg.sh HDF5 "${pkgdir}" "${pkgname}"
}

pkgname=julia-libz-git
pkgver=0.2.0
pkgrel=1
pkgdesc="Libz.jl"
url="https://github.com/BioJulia/Libz.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
# TODO version depends
depends=(julia julia-compat julia-bufferedstreams)
provides=(julia-libz)
source=(git://github.com/BioJulia/Libz.jl)
md5sums=('SKIP')

pkgver() {
  cd Libz.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Libz.jl

  . julia-install-pkg.sh Libz "${pkgdir}" "${pkgname}"
}

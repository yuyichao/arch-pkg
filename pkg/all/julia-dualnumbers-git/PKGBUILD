pkgname=julia-dualnumbers-git
pkgver=0.3.0
pkgrel=1
pkgdesc="DualNumbers.jl"
url="https://github.com/JuliaDiff/DualNumbers.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-compat julia-calculus julia-nanmath)
provides=('julia-dualnumbers')
source=(git://github.com/JuliaDiff/DualNumbers.jl)
md5sums=('SKIP')

pkgver() {
  cd DualNumbers.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd DualNumbers.jl

  . julia-install-pkg.sh DualNumbers "${pkgdir}" "${pkgname}"
}

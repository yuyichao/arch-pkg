pkgname=julia-reversediff-git
pkgver=0.1.2.0.1.ga7f2c4b
pkgrel=1
pkgdesc="ReverseDiff.jl"
url="https://github.com/JuliaDiff/ReverseDiff.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-diffbase julia-forwarddiff julia-calculus julia-compat)
provides=(julia-reversediff)
source=(git://github.com/JuliaDiff/ReverseDiff.jl)
md5sums=('SKIP')

pkgver() {
  cd ReverseDiff.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ReverseDiff.jl

  . julia-install-pkg.sh ReverseDiff "${pkgdir}" "${pkgname}"
}

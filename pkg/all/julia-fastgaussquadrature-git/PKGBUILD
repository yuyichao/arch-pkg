pkgname=julia-fastgaussquadrature-git
pkgver=0.0.1.0.4.g503f4ff
pkgrel=1
pkgdesc="FastGaussQuadrature.jl"
url="https://github.com/ajt60gaibb/FastGaussQuadrature.jl"
arch=('any')
license=('MIT')
makedepends=('git')
# TODO version depends
depends=('julia')
provides=('julia-fastgaussquadrature')
options=('debug' 'strip')
source=(git://github.com/ajt60gaibb/FastGaussQuadrature.jl)
md5sums=('SKIP')

pkgver() {
  cd FastGaussQuadrature.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd FastGaussQuadrature.jl

  install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
  install LICENSE "${pkgdir}/usr/share/licenses/$pkgname/"

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/FastGaussQuadrature"

  cp -a src "${pkgdir}/${site_dir}/FastGaussQuadrature"
}

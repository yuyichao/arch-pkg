pkgname=julia-mappedarrays-git
pkgver=0.0.5
pkgrel=1
pkgdesc="MappedArrays.jl"
url="https://github.com/JuliaArrays/MappedArrays.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia)
provides=('julia-mappedarrays')
source=(git://github.com/JuliaArrays/MappedArrays.jl)
md5sums=('SKIP')

pkgver() {
  cd MappedArrays.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd MappedArrays.jl

  . julia-install-pkg.sh MappedArrays "${pkgdir}" "${pkgname}"
}

run_jupyter_config_manager() {
    python <<EOF
import sys
from notebook.services.config import ConfigManager
cm = ConfigManager()
cm.config_dir = 'etc/jupyter/'
cm.update('notebook', {'load_extensions': {'livereveal/main': $1}})
EOF
}

post_install() {
    run_jupyter_config_manager True
}

post_remove() {
    run_jupyter_config_manager None
}

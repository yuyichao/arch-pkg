pkgname=julia-optimbase-git
pkgver=0.1.0
pkgrel=1
pkgdesc="OptimBase.jl"
url="https://github.com/JuliaNLSolvers/OptimBase.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-reexport julia-nlsolversbase julia-compat)
provides=('julia-optimbase')
source=('git://github.com/JuliaNLSolvers/OptimBase.jl')
md5sums=('SKIP')

pkgver() {
  cd OptimBase.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd OptimBase.jl

  . julia-install-pkg.sh OptimBase "${pkgdir}" "${pkgname}"
}

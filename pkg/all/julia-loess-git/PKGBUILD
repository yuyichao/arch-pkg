pkgname=julia-loess-git
pkgver=0.0.6
pkgrel=1
pkgdesc="Loess.jl"
url="https://github.com/dcjones/Loess.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-distances' 'julia-iterators')
provides=('julia-loess')
source=(git://github.com/dcjones/Loess.jl)
md5sums=('SKIP')

pkgver() {
  cd Loess.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Loess.jl

  . julia-install-pkg.sh Loess "${pkgdir}" "${pkgname}"
}

pkgname=julia-approxfun-git
pkgver=0.0.7.0.28.g098b85a
pkgrel=1
pkgdesc="ApproxFun.jl"
url="https://github.com/ApproxFun/ApproxFun.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-approxfun')
options=('debug' 'strip')
source=(git://github.com/ApproxFun/ApproxFun.jl)
md5sums=('SKIP')

pkgver() {
  cd ApproxFun.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ApproxFun.jl

  install -dm755 "${pkgdir}/usr/share/licenses/$pkgname/"
  install LICENSE.md "${pkgdir}/usr/share/licenses/$pkgname/"

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/ApproxFun"

  cp -a src "${pkgdir}/${site_dir}/ApproxFun"
}

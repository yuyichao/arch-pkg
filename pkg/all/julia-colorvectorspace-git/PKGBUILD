pkgname=julia-colorvectorspace-git
pkgver=0.1.4.0.2.gbe8452d
pkgrel=1
pkgdesc="ColorVectorSpace.jl"
url="https://github.com/JuliaGraphics/ColorVectorSpace.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-colortypes' 'julia-fixedpointnumbers')
provides=('julia-colorvectorspace')
source=(git://github.com/JuliaGraphics/ColorVectorSpace.jl)
md5sums=('SKIP')

pkgver() {
  cd ColorVectorSpace.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ColorVectorSpace.jl

  . julia-install-pkg.sh ColorVectorSpace "${pkgdir}" "${pkgname}"
}

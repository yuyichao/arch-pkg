pkgname=julia-catindices-git
pkgver=0.0.2
pkgrel=2
pkgdesc="CatIndices.jl"
url="https://github.com/JuliaArrays/CatIndices.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-offsetarrays julia-customunitranges)
provides=('julia-catindices')
source=(git://github.com/JuliaArrays/CatIndices.jl)
md5sums=('SKIP')

pkgver() {
  cd CatIndices.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd CatIndices.jl

  . julia-install-pkg.sh CatIndices "${pkgdir}" "${pkgname}"
}

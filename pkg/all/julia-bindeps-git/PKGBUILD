pkgname=julia-bindeps-git
pkgver=0.3.21.0.30.gd34112f
pkgrel=1
pkgdesc="BinDeps.jl"
url="https://github.com/JuliaLang/BinDeps.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'julia-uriparser' 'julia-sha')
provides=('julia-bindeps')
source=(git://github.com/JuliaLang/BinDeps.jl)
md5sums=('SKIP')

pkgver() {
  cd BinDeps.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd BinDeps.jl

  . julia-install-pkg.sh BinDeps "${pkgdir}" "${pkgname}"
}

pkgname=julia-codecs-git
pkgver=0.3.0.0.4.g43ef5f7
pkgrel=1
pkgdesc="Codecs.jl"
url="https://github.com/dcjones/Codecs.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
depends=('julia' 'julia-compat')
provides=('julia-codecs')
source=(git://github.com/dcjones/Codecs.jl)
md5sums=('SKIP')

pkgver() {
  cd Codecs.jl

  git describe --tag | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Codecs.jl

  . julia-install-pkg.sh Codecs "${pkgdir}" "${pkgname}"
}

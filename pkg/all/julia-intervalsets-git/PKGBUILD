pkgname=julia-intervalsets-git
pkgver=0.0.5
pkgrel=1
pkgdesc="IntervalSets.jl"
url="https://github.com/JuliaMath/IntervalSets.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-compat)
provides=('julia-intervalsets')
source=(git://github.com/JuliaMath/IntervalSets.jl)
md5sums=('SKIP')

pkgver() {
  cd IntervalSets.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd IntervalSets.jl

  . julia-install-pkg.sh IntervalSets "${pkgdir}" "${pkgname}"
}

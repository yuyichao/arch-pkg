pkgname=julia-blosc-git
pkgver=0.1.7
pkgrel=1
pkgdesc="Blosc.jl"
url="https://github.com/stevengj/Blosc.jl"
arch=('i686' 'x86_64')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat')
provides=('julia-blosc')
source=(git://github.com/stevengj/Blosc.jl)
md5sums=('SKIP')

# TODO package library seperately

pkgver() {
  cd Blosc.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Blosc.jl/deps

  julia --startup-file=no build.jl
}

package() {
  cd Blosc.jl

  . julia-install-pkg.sh Blosc "${pkgdir}" "${pkgname}"

  rm -rf "${dest_dir}/deps/"{c-blosc-*,make.blosc}
}

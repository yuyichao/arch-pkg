pkgname=julia-blosc-git
pkgver=0.6.0
pkgrel=1
pkgdesc="Blosc.jl"
url="https://github.com/stevengj/Blosc.jl"
arch=('i686' 'x86_64')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-libdl blosc)
provides=('julia-blosc')
source=(git://github.com/stevengj/Blosc.jl)
md5sums=('SKIP')

pkgver() {
  cd Blosc.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Blosc.jl

  cat > deps/deps.jl <<EOF
const libblosc = "/usr/lib/libblosc.so"
check_deps() = nothing
EOF
}

package() {
  cd Blosc.jl

  . /usr/lib/julia/julia-install-pkg.sh Blosc "${pkgdir}" "${pkgname}"
  rm -rf "${dest_dir}/deps/compile.jl"
}

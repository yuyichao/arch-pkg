pkgname=julia-openblas_jll-git
pkgver=0.3.5+2.0.1.gaab6ab9
pkgrel=1
pkgdesc="OpenBLAS_jll.jl"
url="https://github.com/JuliaBinaryWrappers/OpenBLAS_jll.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-compilersupportlibraries_jll openblas)
provides=(julia-openblas_jll)
source=(git://github.com/JuliaBinaryWrappers/OpenBLAS_jll.jl)
md5sums=('SKIP')

pkgver() {
  cd OpenBLAS_jll.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd OpenBLAS_jll.jl

  /usr/lib/julia/julia-gen-jll.sh OpenBLAS_jll libopenblas
}

package() {
  cd OpenBLAS_jll.jl

  . /usr/lib/julia/julia-install-pkg.sh OpenBLAS_jll "${pkgdir}" "${pkgname}"
}

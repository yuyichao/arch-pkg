pkgname=julia-dierckx-git
pkgver=0.2.0.0.35.g9b6092f
pkgrel=1
pkgdesc="Dierckx.jl"
url="https://github.com/kbarbary/Dierckx.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=(git julia-pkg-scripts gcc-fortran)
depends=('julia' 'julia-compat')
provides=('julia-dierckx')
source=(git://github.com/kbarbary/Dierckx.jl)
md5sums=('SKIP')

pkgver() {
  cd Dierckx.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Dierckx.jl

  julia --startup-file=no deps/build.jl
}

package() {
  cd Dierckx.jl

  . julia-install-pkg.sh Dierckx "${pkgdir}" "${pkgname}"
  rm "${dest_dir}/deps/src/ddierckx"/{*.{f,o},Makefile}
}

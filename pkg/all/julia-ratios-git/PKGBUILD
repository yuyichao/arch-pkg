pkgname=julia-ratios-git
pkgver=0.0.4
pkgrel=1
pkgdesc="Ratios.jl"
url="https://github.com/timholy/Ratios.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia  julia-compat)
provides=('julia-ratios')
source=(git://github.com/timholy/Ratios.jl)
md5sums=('SKIP')

pkgver() {
  cd Ratios.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Ratios.jl

  . julia-install-pkg.sh Ratios "${pkgdir}" "${pkgname}"
}

pkgname=julia-imagefiltering-git
pkgver=0.1.4
pkgrel=1
pkgdesc="ImageFiltering.jl"
url="https://github.com/JuliaImages/ImageFiltering.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=(julia julia-fixedpointnumbers julia-colors julia-colorvectorspace julia-imagecore
         julia-offsetarrays julia-catindices julia-staticarrays julia-mappedarrays julia-fftviews
         julia-computationalresources julia-datastructures julia-tilediteration julia-compat)
provides=('julia-imagefiltering')
source=(git://github.com/JuliaImages/ImageFiltering.jl)
md5sums=('SKIP')

pkgver() {
  cd ImageFiltering.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd ImageFiltering.jl

  . julia-install-pkg.sh ImageFiltering "${pkgdir}" "${pkgname}"
}

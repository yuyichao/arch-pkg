pkgname=julia-iterators-git
pkgver=0.1.9
pkgrel=1
pkgdesc="Iterators.jl"
url="https://github.com/JuliaLang/Iterators.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git')
depends=('julia' 'julia-compat')
provides=('julia-iterators')
source=(git://github.com/JuliaLang/Iterators.jl)
md5sums=('SKIP')

pkgver() {
  cd Iterators.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Iterators.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/Iterators"

  cp -a src "${pkgdir}/${site_dir}/Iterators"
}

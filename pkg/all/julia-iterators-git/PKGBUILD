pkgname=julia-iterators-git
pkgver=0.3.0.0.4.g600273b
pkgrel=1
pkgdesc="Iterators.jl"
url="https://github.com/JuliaCollections/Iterators.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=(julia)
provides=('julia-iterators')
source=(git://github.com/JuliaCollections/Iterators.jl)
md5sums=('SKIP')

pkgver() {
  cd Iterators.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Iterators.jl

  . julia-install-pkg.sh Iterators "${pkgdir}" "${pkgname}"
}

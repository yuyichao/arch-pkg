pkgname=julia-measures-git
pkgver=0.0.2
pkgrel=1
pkgdesc="Measures.jl"
url="https://github.com/dcjones/Measures.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia')
provides=('julia-measures')
source=(git://github.com/dcjones/Measures.jl)
md5sums=('SKIP')

pkgver() {
  cd Measures.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Measures.jl

  . julia-install-pkg.sh Measures "${pkgdir}" "${pkgname}"
}

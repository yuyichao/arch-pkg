pkgname=julia-compose-git
pkgver=0.4.2.0.29.gc0fd535
pkgrel=1
pkgdesc="Compose.jl"
url="https://github.com/dcjones/Compose.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-colors' 'julia-compat' 'julia-datastructures'
         'julia-iterators' 'julia-json' 'julia-measures')
provides=('julia-compose')
source=(git://github.com/dcjones/Compose.jl)
md5sums=('SKIP')

pkgver() {
  cd Compose.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Compose.jl

  . julia-install-pkg.sh Compose "${pkgdir}" "${pkgname}"
}

pkgname=julia-zmq-git
pkgver=0.4.3
pkgrel=1
pkgdesc="ZMQ.jl"
url="https://github.com/JuliaInterop/ZMQ.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-bindeps' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-compat' 'zeromq')
provides=('julia-zmq')
options=('debug' 'strip')
source=(git://github.com/JuliaInterop/ZMQ.jl)
md5sums=('SKIP')

pkgver() {
  cd ZMQ.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd ZMQ.jl

  julia --startup-file=no deps/build.jl
}

package() {
  cd ZMQ.jl

  . julia-install-pkg.sh ZMQ "${pkgdir}" "${pkgname}"
}

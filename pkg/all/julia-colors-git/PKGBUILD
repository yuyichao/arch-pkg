pkgname=julia-colors-git
pkgver=0.7.3.0.8.gc9fad51
pkgrel=2
pkgdesc="Colors.jl"
url="https://github.com/JuliaGraphics/Colors.jl"
arch=('any')
license=('MIT')
makedepends=('git' 'julia-pkg-scripts')
# TODO version depends
depends=('julia' 'julia-colortypes' 'julia-fixedpointnumbers'
         'julia-reexport' 'julia-compat')
provides=('julia-colors')
source=(git://github.com/JuliaGraphics/Colors.jl)
md5sums=('SKIP')

pkgver() {
  cd Colors.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Colors.jl

  . julia-install-pkg.sh Colors "${pkgdir}" "${pkgname}"
}

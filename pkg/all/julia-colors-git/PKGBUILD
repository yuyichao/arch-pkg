pkgname=julia-colors-git
pkgver=0.12.0.0.1.g646f45c
pkgrel=1
pkgdesc="Colors.jl"
url="https://github.com/JuliaGraphics/Colors.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia julia-colortypes julia-fixedpointnumbers julia-reexport)
provides=(julia-colors)
source=(git://github.com/JuliaGraphics/Colors.jl)
md5sums=('SKIP')

pkgver() {
  cd Colors.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Colors.jl

  . /usr/lib/julia/julia-install-pkg.sh Colors "${pkgdir}" "${pkgname}"
}

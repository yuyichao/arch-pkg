pkgname=julia-quadgk-git
pkgver=0.0.0.32.1094910
pkgrel=1
pkgdesc="QuadGK.jl"
url="https://github.com/JuliaMath/QuadGK.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=('julia')
provides=('julia-quadgk')
source=(git://github.com/JuliaMath/QuadGK.jl)
md5sums=('SKIP')

pkgver() {
  cd QuadGK.jl

  # git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
  echo "0.0.0.$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

package() {
  cd QuadGK.jl

  . julia-install-pkg.sh QuadGK "${pkgdir}" "${pkgname}"
}

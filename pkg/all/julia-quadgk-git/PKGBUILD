pkgname=julia-quadgk-git
pkgver=0.1.1
pkgrel=1
pkgdesc="QuadGK.jl"
url="https://github.com/JuliaMath/QuadGK.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git' 'julia-pkg-scripts')
depends=(julia julia-datastructures)
provides=('julia-quadgk')
source=(git://github.com/JuliaMath/QuadGK.jl)
md5sums=('SKIP')

pkgver() {
  cd QuadGK.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd QuadGK.jl

  . julia-install-pkg.sh QuadGK "${pkgdir}" "${pkgname}"
}

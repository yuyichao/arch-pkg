pkgname=julia-formatting-git
pkgver=0.1.4
pkgrel=1
pkgdesc="Formatting.jl"
url="https://github.com/JuliaLang/Formatting.jl"
arch=('any')
license=('MIT')
# TODO version depends
makedepends=('git')
depends=('julia' 'julia-compat')
provides=('julia-formatting')
source=(git://github.com/JuliaLang/Formatting.jl)
md5sums=('SKIP')

pkgver() {
  cd Formatting.jl

  git describe | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Formatting.jl

  site_dir=$(julia -f -e "print(((pre) -> filter(((x) -> x[1:length(pre)] == pre), sort(LOAD_PATH, lt=(x, y) -> length(x) < length(y)))[1])(ARGS[1]))" "/usr")

  install -dm755 "${pkgdir}/${site_dir}/Formatting"

  cp -a src "${pkgdir}/${site_dir}/Formatting"
}

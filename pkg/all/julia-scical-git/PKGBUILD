pkgname=julia-scical-git
pkgver=15.3065515
pkgrel=1
pkgdesc="Scical.jl"
url="https://github.com/yuyichao/Scical.jl"
arch=('i686' 'x86_64')
license=('LGPLv3')
# TODO version depends
depends=('julia')
makedepends=('cmake')
provides=('julia-scical')
options=('debug' 'strip')
source=(git://github.com/yuyichao/Scical.jl)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/Scical.jl"

  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/Scical.jl"
  mkdir -p build
  cd build

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=lib ..

  make
}

package() {
  cd "$srcdir/Scical.jl"
  cd build

  make install DESTDIR="${pkgdir}"
}
